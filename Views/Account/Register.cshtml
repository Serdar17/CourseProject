@model CourseProject.ViewModels.RegisterViewModel
@{
	ViewData["Title"] = "Зарегистрироваться";
}
<br/>
<h1 class="row justify-content-center">@ViewData["Title"]</h1>

<div class="row justify-content-center">
	<div class="col-md-4">
		<section>
			<form id="registerForm" method="post" asp-controller="Account" asp-action="Register">
				<h3 class="row justify-content-center">Создайте учетную запись</h3>
				<hr />

				<div class="text-danger" asp-validation-summary="ModelOnly"></div>

				<div class="form-floating">
					<input asp-for="UserName" placeholder="User Name" class="form-control" autocomplete="name" aria-required="true"/>
					<label asp-for="UserName" class="form-label mt-0" ></label>
					<span asp-validation-for="UserName" class="text-danger"></span>
				</div>

				<div class="form-floating">
					<input asp-for="Email" placeholder="Email" class="form-control" autocomplete="name" aria-required="true"/>
					<label asp-for="Email"></label>
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>

				<div class="form-floating">
					<input asp-for="Password" placeholder="Password" class="form-control" autocomplete="name" aria-required="true"/>
					<label asp-for="Password"></label>
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<div class="form-floating">
					<input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" autocomplete="name" aria-required="true"/>
					<label asp-for="ConfirmPassword"></label><br />
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>
				<div>
					<input type="submit" class="w-100 btn btn-lg btn-primary" value="Регистрация"/>
				</div>
			</form>
		</section>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

